@model List<TraversalCoreProje.Areas.Admin.Models.DestinationModel>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4>Reiseziele</h4>
                <div class="card-header-form">
                    <!-- Optional: Suchfeld oder Filter -->
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <tr>
                            <th style="width: 60px;">#</th>
                            <th>Stadt</th>
                            <th>Reiseleiter</th>
                            <th>Reisedauer</th>
                            <th>Preis</th>
                            <th>Status</th>
                            <th>Details</th>
                            <th>Bearbeiten</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.Image" alt="Bild"
                                         style="width: 100%; border-radius: 8px;"
                                         data-toggle="tooltip" title="@item.City">
                                </td>
                                <td>@item.City</td>
                                <td class="text-truncate">
                                    <div class="team-member team-member-sm">
                                        <img src="@item.userimage" alt="Reiseleiter"
                                             style="width: 40px; height: 40px; border-radius: 50%;"
                                             data-toggle="tooltip"
                                             title="@item.username @item.usersurname">
                                    </div>
                                </td>
                                <td>@item.DayNight</td>
                                <td>€ @item.Price</td>
                                <td>
                                    @if (item.Status)
                                    {
                                        <div style="background-color: #28a745; color: white; padding: 4px 8px; border-radius: 4px; display: inline-block;">Aktiv</div>
                                    }
                                    else
                                    {
                                        <div style="background-color: #dc3545; color: white; padding: 4px 8px; border-radius: 4px; display: inline-block;">Inaktiv</div>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("Destiniton", "Destiniton", new { area = "Default", id = item.DestinationID })"
                                       style="background: linear-gradient(to right, #00c6ff, #0072ff); color: white; padding: 6px 12px; border-radius: 6px; text-decoration: none; display: inline-block;">
                                        Details
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "Destination", new { id = item.DestinationID, area = "Admin" })"
                                       style="background: linear-gradient(to right, #f7971e, #ffd200); color: white; padding: 6px 12px; border-radius: 6px; text-decoration: none; display: inline-block;">
                                        Bearbeiten
                                    </a>
                                </td>
                                <td>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>