
@{
    ViewData["Title"] = "CanceledReservations";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model IPagedList<Reservition>


<head>
    <link rel="stylesheet" href="~/otika-bootstrap-admin-template/assets/bundles/chocolat/dist/css/chocolat.css">
</head>
@await Html.PartialAsync("/Views/Shared/MemberPartial/_MemberReservationGrupBtn.cshtml")

<section class="section">
    <div class="section-body">
        <h2> stornierte Reservierungen ... </h2><br />
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                @foreach (var item in Model)
                {
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h4> @item.Destiniton.City</h4>
                            <div class="card-header-action">
                                <div class="dropdown">
                                    <a href="#" data-toggle="dropdown" class="btn btn-warning dropdown-toggle">Optionen</a> <div class="dropdown-menu">
                                        <a href="@Url.Action("Destiniton", "Destiniton", new { area = "Default", id = item.Destiniton.DestinationID })" class="dropdown-item has-icon">
                                            <i class="fas fa-eye"></i> Anzeigen
                                        </a>
                                        <a style="pointer-events: none; color: gray;" href="@Url.Action("Update", "Reservation", new { area = "Member", id = item.id })" class="dropdown-item has-icon">
                                            <i class="far fa-edit"></i> Bearbeiten
                                        </a>
                                        <div class="dropdown-divider"></div>
                                        <a style="pointer-events: none; color: gray;" href="@Url.Action("Delate", "Reservation", new { area = "Member", id = item.id })" class="dropdown-item has-icon text-danger">
                                            <i class="far fa-trash-alt"></i>
                                            Löschen
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-2">
                                    <img class="img-fluid rounded w-75" src="@Url.Content("~" + item.Destiniton.Image)" />
                                </div>
                                <div class="col-lg-3">
                                    <label>Reservierungsdatum</label><br />
                                    <label>Reservierungsstart</label><br />
                                    <label>Reservierungsende</label><br />
                                    <label>Personenzahl</label><br />
                                    <label>Status</label><br />
                                    <label>Tage/Nächte</label><br />
                                    <label>Preis</label><br />
                                </div>
                                <div class="col-lg-5">
                                    <label>@item.ReservDate.ToLongDateString()</label><br />
                                    <label>@item.ReservStart.ToLongDateString()</label><br />
                                    <label>@item.ReservEnd.ToLongDateString()</label><br />
                                    <label>@item.HowmanyPapel</label><br />
                                    <label>@item.status</label><br />
                                    <label>@item.Destiniton.DayNight</label><br />
                                    <label>@item.Destiniton.Price €</label><br />
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<nav aria-label="Sayfa navigasyonu">
    <ul class="pagination justify-content-center">
        @if (Model.HasPreviousPage)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("GetReservations", new { page = Model.PageNumber - 1 })"> - Vorherige</a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link" href="#"> - Vorherige</a>
            </li>
        }

        @for (var i = 1; i <= Model.PageCount; i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link" href="@Url.Action("GetReservations", new { page = i })">@i</a>
            </li>
        }

        @if (Model.HasNextPage)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("GetReservations", new { page = Model.PageNumber + 1 })">Nächste + </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Nächste + </a>
            </li>
        }
    </ul>
</nav>

<script src="~/otika-bootstrap-admin-template/assets/bundles/chocolat/dist/js/jquery.chocolat.min.js"></script>
<script src="~/otika-bootstrap-admin-template/assets/bundles/jquery-ui/jquery-ui.min.js"></script>