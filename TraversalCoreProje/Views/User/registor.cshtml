<body class="bg-white min-h-screen">
    <div class="min-h-screen flex">
        <!-- Sol Taraf - Resim Alanı -->
        <div class="flex-1 bg-gray-500 relative">
            <div class="fixed left-0 top-0 w-1/2 h-full flex flex-col items-center justify-center">
                
                <h2 class="text-4xl font-bold mt-6" style="font-family: 'Inter', sans-serif; letter-spacing: -0.02em; color: #374151;">Travelsal</h2>
            </div>
        </div>

        <!-- Sağ Taraf - Kayıt Formu -->
        <div class="flex-1 flex items-center justify-center p-8 bg-gray-500">
            <div class="w-full max-w-sm">


                <!-- Kayıt Formu -->
                <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-200">
                    <h2 class="text-2xl font-semibold text-black mb-6 text-center">Konto erstellen</h2>

                    <form id="registerForm" class="space-y-4">
                        <!-- Vollständiger Name -->
                        <div>
                            <label class="block text-gray-700 text-sm font-medium mb-2">Vollständiger Name</label>
                            <input type="text" id="fullName" required="" class="input-focus w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-xl text-black placeholder-gray-500 focus:outline-none focus:border-black transition-all duration-300" placeholder="Ihr Vor- und Nachname">
                        </div>

                        <!-- E-Mail -->
                        <div>
                            <label class="block text-gray-700 text-sm font-medium mb-2">E-Mail</label>
                            <input type="email" id="email" required="" class="input-focus w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-xl text-black placeholder-gray-500 focus:outline-none focus:border-black transition-all duration-300" placeholder="beispiel@email.com">
                        </div>

                        <!-- Telefon -->
                        <div>
                            <label class="block text-gray-700 text-sm font-medium mb-2">Telefon</label>
                            <input type="tel" id="phone" required="" class="input-focus w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-xl text-black placeholder-gray-500 focus:outline-none focus:border-black transition-all duration-300" placeholder="0555 123 45 67">
                        </div>

                        <!-- Passwort -->
                        <div>
                            <label class="block text-gray-700 text-sm font-medium mb-2">Passwort</label>
                            <input type="password" id="password" required="" class="input-focus w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-xl text-black placeholder-gray-500 focus:outline-none focus:border-black transition-all duration-300" placeholder="Mindestens 6 Zeichen">
                        </div>

                        <!-- Passwort wiederholen -->
                        <div>
                            <label class="block text-gray-700 text-sm font-medium mb-2">Passwort wiederholen</label>
                            <input type="password" id="confirmPassword" required="" class="input-focus w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-xl text-black placeholder-gray-500 focus:outline-none focus:border-black transition-all duration-300" placeholder="Passwort erneut eingeben">
                        </div>

                        <!-- Vertragszustimmung -->
                        <div class="flex items-start space-x-3">
                            <input type="checkbox" id="terms" required="" class="mt-1 w-4 h-4 text-black bg-white border-gray-300 rounded focus:ring-gray-500">
                            <label for="terms" class="text-gray-700 text-sm">
                                Ich habe die <span class="text-black underline cursor-pointer">Nutzungsbedingungen</span> und
                                <span class="text-black underline cursor-pointer">Datenschutzrichtlinie</span> gelesen und akzeptiere sie.
                            </label>
                        </div>

                        <!-- Registrierungsbutton -->
                        <button type="submit" class="w-full bg-black text-white font-semibold py-3 px-6 rounded-xl hover:bg-gray-800 transform hover:scale-105 transition-all duration-300 shadow-lg">
                            Konto erstellen
                        </button>
                    </form>

                    <!-- Anmelde-Link -->
                    <div class="mt-6 text-center">
                        <p class="text-gray-600 text-sm">
                            Haben Sie bereits ein Konto?
                            <a href="#" class="text-black font-medium underline hover:text-gray-700 transition-colors">
                                Anmelden
                            </a>
                        </p>
                    </div>

                    <!-- Social Media Registrierung -->
                    <div class="mt-6">
                        <div class="relative">
                            <div class="absolute inset-0 flex items-center">
                                <div class="w-full border-t border-gray-300"></div>
                            </div>
                            <div class="relative flex justify-center text-sm">
                                <span class="px-2 bg-white text-gray-600">oder</span>
                            </div>
                        </div>

                        <div class="mt-6 grid grid-cols-2 gap-3">
                            <button class="flex justify-center items-center px-4 py-2 border border-gray-300 rounded-lg bg-gray-50 text-black hover:bg-gray-100 transition-all duration-300">
                                Google
                            </button>
                            <button class="flex justify-center items-center px-4 py-2 border border-gray-300 rounded-lg bg-gray-50 text-black hover:bg-gray-100 transition-all duration-300">
                                Facebook
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Fußzeile -->
                <div class="text-center mt-6">
                    <p class="text-gray-500 text-xs">
                        Durch die Registrierung erhalten Sie Zugang zu tausenden von Reiseerlebnissen weltweit!
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('registerForm').addEventListener('submit', function (e) {
            e.preventDefault();

            const fullName = document.getElementById('fullName').value;
            const email = document.getElementById('email').value;
            const phone = document.getElementById('phone').value;
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const terms = document.getElementById('terms').checked;

            // Einfache Validierung
            if (!fullName || !email || !phone || !password || !confirmPassword) {
                alert('Bitte füllen Sie alle Felder aus!');
                return;
            }

            if (password !== confirmPassword) {
                alert('Die Passwörter stimmen nicht überein!');
                return;
            }

            if (password.length < 6) {
                alert('Das Passwort muss mindestens 6 Zeichen lang sein!');
                return;
            }

            if (!terms) {
                alert('Sie müssen die Nutzungsbedingungen akzeptieren!');
                return;
            }

            // Erfolgreiche Registrierungsnachricht
            alert(`Willkommen ${fullName}! 🎉\n\nIhre Registrierung wurde erfolgreich abgeschlossen. Sie sind jetzt Teil der Reisewelt!`);

            // Formu temizle
            this.reset();
        });

        // Sosyal medya butonları
        document.querySelectorAll('button').forEach(button => {
            if (button.textContent.includes('Google') || button.textContent.includes('Facebook')) {
                button.addEventListener('click', function () {
                    const platform = this.textContent.includes('Google') ? 'Google' : 'Facebook';
                    alert(`Die Registrierung mit ${platform} wird bald verfügbar sein! 🚀`);
                });
            }
        });

        // Giriş yap linki
        document.querySelector('a[href="#"]').addEventListener('click', function (e) {
            e.preventDefault();
            alert('Sie werden zur Anmeldeseite weitergeleitet... 🔐');
        });
    </script>
