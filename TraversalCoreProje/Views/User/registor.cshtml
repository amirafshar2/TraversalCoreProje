<body class="bg-white min-h-screen">
    <div class="min-h-screen flex">
        <!-- Sol Taraf - Resim Alanı -->
        <div class="flex-1 bg-gray-500 relative">
            <div class="fixed left-0 top-0 w-1/2 h-full flex flex-col items-center justify-center">
                <a class="text-4xl font-bold mt-6" style="font-style:normal; font-family: 'Inter', sans-serif; letter-spacing: -0.02em; color: #374151;" href="/Default/Index/">
                    <h2 class="text-4xl font-bold mt-6" style="font-family: 'Inter', sans-serif; letter-spacing: -0.02em; color: #374151;">Travelsal</h2>
                </a>
            </div>
        </div>

        <!-- Sağ Taraf - Kayıt Formu -->
        <div class="flex-1 flex items-center justify-center p-8 bg-gray-500">
            <div class="w-full max-w-sm">


                <!-- Kayıt Formu -->
                <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-200">
                    <h2 class="text-2xl font-semibold text-black mb-6 text-center">Konto erstellen</h2>

                    <form method="post" id="registerForm" class="space-y-4" action="/User/registor">
                        <!-- Vollständiger Name -->
                        <div>
                            <label class="block text-gray-700 text-sm font-medium mb-2">VorName</label>
                            <input type="text" id="name" asp-for=Name  class="input-focus w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-xl text-black placeholder-gray-500 focus:outline-none focus:border-black transition-all duration-300" placeholder="Ihr Vorname">
                            <span asp-validation-for="Name" style="color:red" class="text-danger sp"></span>
                        </div>
                        <div>
                            <label class="block text-gray-700 text-sm font-medium mb-2">NachName</label>
                            <input type="text" id="surname" asp-for="Surname"  class="input-focus w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-xl text-black placeholder-gray-500 focus:outline-none focus:border-black transition-all duration-300" placeholder="Ihr Nachname">
                            <span asp-validation-for="Surname" style="color:red" class="text-danger sp"></span>
                        </div>
                        <!-- E-Mail -->
                        <div>
                            <label class="block text-gray-700 text-sm font-medium mb-2">E-Mail</label>
                            <input type="email" id="email" asp-for="Email" class="input-focus w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-xl text-black placeholder-gray-500 focus:outline-none focus:border-black transition-all duration-300" placeholder="beispiel@email.com">
                            <span asp-validation-for="Email" style="color:red" class="text-danger sp"></span>
                        </div>

                        <!-- Telefon -->
                        <div>
                            <label class="block text-gray-700 text-sm font-medium mb-2">Telefon</label>
                            <input type="tel" id="phone" asp-for="Telefonno" minlength="11" required class="input-focus w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-xl text-black placeholder-gray-500 focus:outline-none focus:border-black transition-all duration-300" placeholder="0155 123 45 67">
                            <span asp-validation-for="Telefonno" style="color:red" class="text-danger sp"></span>
                        </div>

                        <!-- Passwort -->
                        <div>
                            <label class="block text-gray-700 text-sm font-medium mb-2">Passwort</label>
                            <input type="password" id="password" minlength="6" asp-for="Password" required class="input-focus w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-xl text-black placeholder-gray-500 focus:outline-none focus:border-black transition-all duration-300" placeholder="Mindestens 6 Zeichen">
                            <span asp-validation-for="Password" style="color:red" class="text-danger sp"></span>
                        </div>

                        <!-- Passwort wiederholen -->
                        <div>
                            <label class="block text-gray-700 text-sm font-medium mb-2">Passwort wiederholen</label>
                            <input type="password" id="confirmPassword" minlength="6" asp-for="PasswordConfirm" required class="input-focus w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-xl text-black placeholder-gray-500 focus:outline-none focus:border-black transition-all duration-300" placeholder="Passwort erneut eingeben">
                            <span asp-validation-for="PasswordConfirm"  class="text-danger sp" style="color:red"></span>
                        </div>

                        <!-- Vertragszustimmung -->
                        <div class="flex items-start space-x-3">
                            <input type="checkbox" id="terms" required="" class="mt-1 w-4 h-4 text-black bg-white border-gray-300 rounded focus:ring-gray-500">
                            <label for="terms" class="text-gray-700 text-sm">
                                Ich habe die <span class="text-black underline cursor-pointer">Nutzungsbedingungen</span> und
                                <span class="text-black underline cursor-pointer">Datenschutzrichtlinie</span> gelesen und akzeptiere sie.
                            </label>
                        </div>
                        <div style="color:red" asp-validation-summary="ModelOnly">  </div>
                        <!-- Registrierungsbutton -->
                        <button  class="w-full bg-black text-white font-semibold py-3 px-6 rounded-xl hover:bg-gray-800 transform hover:scale-105 transition-all duration-300 shadow-lg">
                            Konto erstellen
                        </button>
                    </form>

                    <!-- Anmelde-Link -->
                    <div class="mt-6 text-center">
                        <p class="text-gray-600 text-sm">
                            Haben Sie bereits ein Konto?
                            <a href="/User/Login/" class="text-black font-medium underline hover:text-gray-700 transition-colors">
                                Anmelden
                            </a>
                        </p>
                    </div>

                    <!-- Social Media Registrierung -->
                 @*   <div class="mt-6">
                        <div class="relative">
                            <div class="absolute inset-0 flex items-center">
                                <div class="w-full border-t border-gray-300"></div>
                            </div>
                            <div class="relative flex justify-center text-sm">
                                <span class="px-2 bg-white text-gray-600">oder</span>
                            </div>
                        </div>

                        <div class="mt-6 grid grid-cols-2 gap-3">
