<li class="dropdown">
    <a href="#" data-toggle="dropdown"
       class="nav-link dropdown-toggle nav-link-lg nav-link-user">
        <img alt="image" src="@ViewBag.image"
             class="user-img-radious-style"> <span class="d-sm-none d-lg-inline-block"></span>
    </a>
    <div class="dropdown-menu dropdown-menu-right pullDown">
        <div class="dropdown-title">Hello @ViewBag.name  @ViewBag.surename</div>
        <a asp-area="" asp-controller="Home" asp-action="Index" class="dropdown-item has-icon">
            <i class="fas fa-home"></i>
            Home
        </a>
       
        <a asp-area="Member" asp-controller="Profile" asp-action="Index" class="dropdown-item has-icon">
             <i class="far fa-user"></i> Profile
            Settings
        </a>
        <div class="dropdown-divider"></div>
        <a style="cursor:pointer" onclick="document.getElementById('form').submit();" class="dropdown-item has-icon text-danger">
            <i class="fas fa-sign-out-alt"></i>
            Logout
        </a>
    </div>
</li>
<div style="visibility:hidden">
    <form method="post" id="form" asp-area="default" asp-controller="User" asp-action="Logout">
    </form>
</div>