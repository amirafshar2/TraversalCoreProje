@using EntityLayer.Concrate
@model List<Destiniton>

<section class="w3l-grids-3 py-5">
    <div class="container py-md-5">
        <div class="title-content text-left mb-lg-5 mb-4">
            <h6 class="sub-title">Besuchen</h6>
            <h3 class="hny-title">Beliebtestes Reiseziel</h3>
        </div>
        <div class="row bottom-ab-grids">
            <!--/row-grids-->
            @foreach (var Item in Model)
            {
                <div class="col-lg-6 subject-card  mt-4">
                    <div class="subject-card-header p-4">
                        <a href="#" class="card_title p-lg-4d-block">
                            <div class="row align-items-center">
                                <div class="col-sm-5 subject-img">
                                    <img src="@Item.Image" class="img-fluid" alt="">
                                </div>
                                <div class="col-sm-7 subject-content mt-sm-0 mt-4">
                                    <h4>@Item.City</h4>
                                    <p>@Item.DayNight</p>
                                    <div class="dst-btm">
                                        <h6 class=""> Preis ab </h6>
                                        <span>€@Item.Price</span>
                                    </div>
                                    <p class="sub-para">@Item.Description</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
            <!--/row-grids-->
        </div>
    </div>
</section>