<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
@if (ViewBag.name == null)
{
    <a class=" btn btn-style btn-secondary" href="/User/Login/" style="height: 38px; color:aliceblue;"> Anmelden </a>
}
else
{
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Hi @ViewBag.name @ViewBag.Surname
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" asp-area="Member" asp-controller="Profile" asp-action="Index" >Profile</a></li>
            <li><a class="dropdown-item" href="@Url.Action("GetReservations", "Reservation", new { area = "Member" })">Reservation</a></li>
            <li><a class="dropdown-item" href="#" onclick="document.getElementById('form').submit();">Logout</a></li>
        </ul>
    </div>

    <div style="visibility:hidden">
        <form method="post" id="form" asp-controller="User" asp-action="Logout">
        </form>
    </div>
}

