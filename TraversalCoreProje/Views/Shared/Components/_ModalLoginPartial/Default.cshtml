@model TraversalCoreProje.Models.Usermodel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<script src="https://cdn.tailwindcss.com"></script>

<style>

    body {
        font-family: 'Inter', sans-serif;
    }

    .modal-backdrop {
        backdrop-filter: blur(8px);
    }

    .modal-enter {
        animation: modalEnter 0.3s ease-out;
    }
</style>

<div class="login-logo-container relative m-3">
    @if (Model != null)
    {
        <!-- Profil Menü -->
        <div class="relative">
            <button id="profileBtn" class="flex items-center space-x-2 p-1 rounded-full hover:bg-gray-100 transition">
                @if (Model.Telefonno != "null")
                {
                    <img src="@Model.Telefonno"  class="w-10 h-10 rounded-full border border-gray-300 shadow-sm" />
                }
                else
                {
                    <img src="~/Traversal-Liberty/assets/images/OIP.webp"  class="w-10 h-10 rounded-full border border-gray-300 shadow-sm" />
                }
            </button>
            <div id="profileMenu"
                 class="hidden absolute top-full right-0 mr-[2px] mt-2 w-56 bg-white rounded-2xl shadow-2xl border border-gray-100 z-50 overflow-hidden">
                <div class="p-4 text-center border-b border-gray-100">
                    @if (Model.Telefonno != "null")
                    {
                        <img src="@Model.Telefonno" style="position: relative;margin: 3px 0px 23px 59px;"  class="w-10 h-10 rounded-full border border-gray-300 shadow-sm" />
                    }
                    else
                    {
                        <img src="~/Traversal-Liberty/assets/images/OIP.webp" style="position: relative;margin: 3px 0px 23px 59px;" class="w-10 h-10 rounded-full border border-gray-300 shadow-sm" />
                    }
                    <p class="font-semibold">@Model.Name , @Model.Surname </p>
                </div>
                <a href="" class="flex items-center px-4 py-2 hover:bg-gray-50 transition">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-gray-500" fill="none"
                         viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M5.121 17.804A7.963 7.963 0 0112 15c1.657 0 3.156.504 4.379 1.366M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    Profil Düzenle
                </a>

                <a href="" class="flex items-center px-4 py-2 hover:bg-gray-50 transition">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-gray-500" fill="none"
                         viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M11 4a1 1 0 011-1h2a1 1 0 011 1v1h2a1 1 0 011 1v2h1a1 1 0 011 1v2a1 1 0 01-1 1h-1v2a1 1 0 01-1 1h-2v1a1 1 0 01-1 1h-2a1 1 0 01-1-1v-1H7a1 1 0 01-1-1v-2H5a1 1 0 01-1-1v-2a1 1 0 011-1h1V6a1 1 0 011-1h2V4z" />
                    </svg>
                    Ayarlar
                </a>

                @if (Model != null)
                {
                    <form method="post" asp-controller="User" asp-action="Logout" class="flex items-center">
                        <button type="submit"
                                class="flex items-center px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 transition">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h6a2 2 0 012 2v1" />
                            </svg>
                            Abmelden
                        </button>
                    </form>
                }

            </div>
        </div>
    }
    else
    {
        <!-- Login Butonu -->
        <div class="login-logo-container relative">
            <a id="loginBtn" style="color:dimgrey">
                <span class="material-symbols-outlined">
                    account_circle
                </span>
            </a>

            <!-- Modal Container -->
            <div id="modalContainer" class="hidden absolute top-full left-1/2 transform -translate-x-1/2 mt-2 bg-white rounded-2xl shadow-2xl w-96 z-50">
                <!-- Modal Header -->
                <div class="flex items-center justify-between p-6 border-b border-gray-200">
                    <h2 class="text-2xl font-bold text-gray-800">Giriş Yap</h2>
                    <button id="closeModal" class="text-gray-400 hover:text-gray-600 transition-colors p-1">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
                <div class="relative" style=" padding: 50px 0px 0px 0px;  ">




                    <!-- Modal Body -->
                    <div class="p-6">
                        <form id="loginForm" class="space-y-4" method="post" asp-controller="User" asp-action="Login">
                            <!-- Email Input -->
                            <div>
                                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                                    E-Mail
                                </label>
                                <input type="email" id="email" name="Username" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" placeholder="email@email.com" required="">
                            </div>

                            <!-- Password Input -->
                            <div>
                                <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
                                    Passwort
                                </label>
                                <input type="password" id="password" name="Password" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" placeholder="••••••••" required="">
                            </div>

                            <!-- Remember Me -->
                            <div class="flex items-center justify-between">
                               
                                <a href="#" class="text-sm text-blue-600 hover:text-blue-800 transition-colors">
                                    Passwort vergessen?
                                </a>
                            </div>

                            <!-- Login Button -->
                            <button type="submit"  class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-lg transition-colors focus:outline-none focus:ring-4 focus:ring-blue-300">
                                Anmelden
                            </button>
                        </form>

                        <!-- Divider -->
                        <div class="my-6 flex items-center">
                            <div class="flex-1 border-t border-gray-300"></div>
                            <span class="px-4 text-sm text-gray-500">Oder</span>
                            <div class="flex-1 border-t border-gray-300"></div>
                        </div>

                        <!-- Social Login -->
                        <div class="space-y-3">
                            <a href="/User/Login/" class="w-full flex items-center justify-center px-4 py-3 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                                
                                Startseite
                            </a>
                        </div>

                        <!-- Sign Up Link -->
                        <p class="text-center text-sm text-gray-600 mt-6">
                            Sie haben noch kein Konto?
                            <a href="/User/registor/" class="text-blue-600 hover:text-blue-800 font-medium transition-colors">
                                Melden Sie sich an
                            </a>
                        </p>
                    </div>

                </div>
            </div>
        </div>
    }
</div>
