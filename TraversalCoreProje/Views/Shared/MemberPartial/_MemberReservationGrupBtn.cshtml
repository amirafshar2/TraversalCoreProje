<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<style>
    #reservation-nav .nav-link {
        border-radius: 10px;
        padding: 12px 20px;
        font-weight: 500;
        background-color: #dee2e6; /* daha koyu gri */
        color: #212529;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
    }

        #reservation-nav .nav-link:hover {
            background-color: #ced4da; /* hover'da biraz daha koyu */
            color: #0d6efd;
        }

        #reservation-nav .nav-link.active {
            background-color: #0d6efd;
            color: white;
            font-weight: 600;
            box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
        }

        #reservation-nav .nav-link i {
            color: inherit;
            font-size: 1rem;
        }
</style>
@{
    string currentAction = ViewContext.RouteData.Values["Action"].ToString();
}

<div id="reservation-nav" class="nav nav-pills justify-content-center gap-2 mb-4">
    <a href="@Url.Action("GetReservations", "Reservation", new { area = "Member" })"
       class="nav-link @(currentAction == "GetReservations" ? "active" : "")">
        <i class="fas fa-clock"></i> Ausstehende
    </a>

    <a href="@Url.Action("AcceptedReservations", "Reservation", new { area = "Member" })"
       class="nav-link @(currentAction == "AcceptedReservations" ? "active" : "")">
        <i class="fas fa-check"></i> bestätigte
    </a>

    <a href="@Url.Action("CanceledReservations", "Reservation", new { area = "Member" })"
       class="nav-link @(currentAction == "CanceledReservations" ? "active" : "")">
        <i class="fas fa-times"></i> stornierte
    </a>

    <a href="@Url.Action("Index", "Destiniton", new { area = "Default" })"
       class="nav-link @(currentAction == "Index" ? "active" : "")">
        <i class="fas fa-plus"></i> Neue
    </a>
</div>
<br />
